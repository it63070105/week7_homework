pipeline {
    agent any
    
    stages {
        
        stage('Welcome to master'){
            steps{
                echo 'Start Program'
                echo 'Status: OK'
            }
        }

        stage('Tigger the Slave Jobs') {
            steps {
                echo 'Read JSON file'
                script {
                    try{
                        def file = readJSON file: "${env.WORKSPACE}/data.json"
                        name = "${file.name}"
                        age = "${file.age}"
                        echo name
                        echo age
                    }
                    catch (err){
                        echo err
                    }
                }
                echo name
                echo age
                echo 'Start Trigger to send name and age to slave'
                build job: 'slave', parameters: [string(name: 'NAME', value: '$name'), string(name: 'Ages', value: '$age')]
            }
        }
    }
}